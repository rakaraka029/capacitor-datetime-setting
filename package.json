{
  "name": "@greatdayhr/capacitor-datetime-setting",
  "version": "2.1.1",
  "description": "Capacitor plugin for comprehensive iOS date/time change detection. Cloned from date_change_checker Flutter plugin.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/build.gradle",
    "android/src",
    "dist/",
    "ios/Plugin/",
    "GreatdayhrCapacitorDatetimeSetting.podspec"
  ],
  "author": "rakaraka029",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakaraka029/capacitor-datetime-setting.git"
  },
  "bugs": {
    "url": "https://github.com/rakaraka029/capacitor-datetime-setting/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "datetime",
    "time-detection",
    "date-change",
    "ios",
    "date-change-checker",
    "automatic-time",
    "network-time"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api DateTimeSettingPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^7.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^8.57.0",
    "prettier": "~3.0.0",
    "prettier-plugin-java": "~1.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^4.0.0",
    "swiftlint": "^1.0.1",
    "typescript": "~5.6.0"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}